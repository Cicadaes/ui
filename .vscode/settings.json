{
  "javascript.implicitProjectConfig.checkJs": true,
  "eslint.enable": true,
  "eslint.validate": [
    "html",
    "javascript",
    "vue"
  ],
  // recommended dictionary: https://github.com/MaxMilton/hunspell-dictionary
  // "spellright.language": "en_AU",
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "json",
    "markdown",
    "plaintext",
    "postcss",
    "text",
    "vue",
    "yml"
  ],
  "spellright.spellContext": "body code comments strings",
  "css.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "todohighlight.keywords": [
    {
      "text": "XXX:", // for implementation details or notes
      "color": "#ecf2fa",
      "backgroundColor": "#3477ca"
    },
    "README:",
    "NOTE:",
    "REF:" // for references (e.g. a link to an article)
  ],
  "todohighlight.defaultStyle": {
    "color": "unset",
    "backgroundColor": "unset",
    "overviewRulerColor": "grey"
  },
  "vetur.format.scriptInitialIndent": true,
  "vetur.format.styleInitialIndent": true,
  "vetur.validation.style": false,
  "vetur.validation.template": false, // use project based linting instead
}
