{
  "name": "wearegenki-ui-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "homepage": "https://ui.wearegenki.com",
  "scripts": {
    "setup": "yarn && lerna bootstrap --use-workspaces",
    "update": "ncu && lerna exec --parallel -- ncu --reject /wearegenki/",
    "FIXME_start": "npm run dev",
    "FIXME_dev": "false",
    "clean": "lerna clean",
    "clean:dist": "lerna clean --yes && rm -rf node_modules",
    "publish:canary": "lerna publish --canary --exact",
    "publish:next": "lerna publish --npm-tag=next",
    "lint:js": "eslint --ext .js,.vue,.marko packages test/unit/specs",
    "FIXME_lint": "lerna run lint",
    "FIXME_unit": "jest --config test/unit/jest.conf.js --coverage",
    "FIXME_test": "npm run lint && npm run unit",
    "FIXME_pretest": "npm run build",
    "FIXME_prepublish": "npm run build",
    "FIXME_build": "lerna run build",
    "debug:css": "node ./utils/debug-postcss.js",
    "debug:prefixes": "npx autoprefixer-info"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.2",
    "eslint": "4.18.2",
    "lerna": "2.9.0",
    "postcss": "6.0.19",
    "postcss-debug": "0.4.2",
    "postcss-load-config": "1.2.0",
    "stylelint": "9.1.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "> 8.0.0"
  }
}
