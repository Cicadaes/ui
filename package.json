{
  "name": "wearegenki-ui-monorepo",
  "homepage": "https://ui.wearegenki.com",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "docs/examples/*",
    "packages/*",
    "website"
  ],
  "scripts": {
    "setup": "yarn; lerna bootstrap",
    "update": "ncu --error-level 2 && lerna exec --parallel -- ncu --error-level 2 --reject /wearegenki/",
    "publish:prerelease": "lerna publish --canary=prerelease --exact --npm-tag=next",
    "publish:beta": "lerna publish --canary=beta --exact --npm-tag=beta",
    "prepack": "yarn test && yarn build",
    "prebuild": "yarn clean",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "lint:css": "stylelint --cache --cache-location=/tmp/ \"**/*.{vue,html,css}\"",
    "lint:js": "eslint --ignore-path .gitignore --ext .js,.jsx,.vue,.marko packages docs test",
    "lint": "yarn lint:css && yarn lint:js",
    "pretest": "yarn lint",
    "test": "jest",
    "test-ci": "yarn test --coverage --runInBand --ci",
    "test:watch": "yarn test --coverage --watch",
    "debug:browsers": "yarn autoprefixer --info"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "7.0.0-beta.40",
    "@babel/preset-env": "7.0.0-beta.40",
    "@babel/preset-stage-2": "7.0.0-beta.40",
    "@vue/test-utils": "1.0.0-beta.12",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.2",
    "babel-jest": "22.4.1",
    "eslint": "4.18.2",
    "jest": "22.4.2",
    "jest-serializer-vue": "1.0.0",
    "lerna": "3.0.0-beta.2",
    "marko": "4.9.1",
    "npm-check-updates": "2.14.1",
    "postcss": "6.0.19",
    "puppeteer": "1.1.1",
    "stylelint": "9.1.1",
    "vue": "2.5.15",
    "vue-jest": "2.1.1",
    "vue-server-renderer": "2.5.15",
    "vue-template-compiler": "2.5.15"
  },
  "engines": {
    "node": "> 8.0.0"
  }
}
