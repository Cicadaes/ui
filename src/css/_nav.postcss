/* Navbar */

body {
  // margin-top: 5rem; /* FIXME: Not necessary with sidebar nav but worth including probably (?)*/
}

.nav {
  display: flex;
}

.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
}

.navbar-bg {
  color: $white;
  background-color: $primary;
  box-shadow: 0 0 0.5rem $shadow;

  .nav-link {
    color: $white;

    &:hover {
      /* TODO: Change */
      /* background-color: $primary-dark; */
      background-color: $primary;
    }
  }
}

.nav-link {
  padding: 0.9rem 1rem;
  margin: 0; /* Necessary due to larger click area on <a> links */
  cursor: pointer;

&:hover {
    text-decoration: none;
  }
}


/* Sidenav */

.side-nav {
  flex-direction: column;

  > .nav-link {
    margin: 0.2rem 0;

    &.active {
      cursor: default;
      text-decoration: none;
      /* TODO: Change */
      background-color: $grey-lighter;
    }
  }
}


/* Footer */

/* FIXME: Override <a> links (?) */
.footer {
  margin-top: 3rem;
  margin-bottom: 1rem;
  color: $grey;
}
