{
  "globalSetup": "<rootDir>/node_modules/@wearegenki/test/lib/setup.js",
  "globalTeardown": "<rootDir>/node_modules/@wearegenki/test/lib/teardown.js",
  "testEnvironment": "<rootDir>/node_modules/@wearegenki/test/lib/puppeteer-environment.js",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/manual-tests/",
    "/\\.vscode/",
    "/\\.cache/",
    "/coverage/"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "marko",
    "node",
    "vue"
  ],
  "collectCoverageFrom": [
    "**/*.{js,jsx,marko,vue}",
    "!**/\\.*rc.js",
    "!**/*.marko.js",
    "!**/*.min.js",
    "!**/node_modules/**",
    "!**/build/**",
    "!**/config/**",
    "!**/dist/**",
    "!**/public/**",
    "!**/test/**",
    "!**/tmp/**",
    "!**/types/**",
    "!**/vendor/**",
    "!**/.cache/**",
    "!**/.esm-cache/**",
    "!**/.git/**",
    "!**/.vscode/**"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
