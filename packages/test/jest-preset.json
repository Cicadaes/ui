{
  "globalSetup": "<rootDir>/node_modules/@wearegenki/test/lib/setup.js",
  "globalTeardown": "<rootDir>/node_modules/@wearegenki/test/lib/teardown.js",
  "testEnvironment": "<rootDir>/node_modules/@wearegenki/test/lib/puppeteer-environment.js",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/manual-tests/",
    "/\\.vscode/",
    "/\\.cache/",
    "/coverage/"
  ],

  "collectCoverageFrom": [
    "**/*.js",
    "**/*.jsx",
    "**/*.marko",
    "**/*.vue",
    "!**/*.marko.js",
    "!**/*.min.js",
    "!**/node_modules/**",
    "!**/build/**",
    "!**/config/**",
    "!**/dist/**",
    "!**/public/**",
    "!**/test/**",
    "!**/tmp/**",
    "!**/types/**",
    "!**/.cache/**",
    "!**/.esm-cache/**",
    "!**/.git/**",
    "!**/.vscode/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
